<div class="col-md-6 col-md-offset-3">
  <h1>Create new account</h1>
  <p>Please enter the following information.</p>
  <hr>

  <%= form_for @user do |f| %>
    <%= render 'fields', f: f %>
    <hr>

    <div class="form-group">
    <%= f.submit "Create Account", class: 'btn btn-success btn-block' %>
    </div>
  <% end %>

</div>
