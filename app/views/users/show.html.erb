<p id="notice"><%= notice %></p>

<p>
  <%= gravatar_for @user %>
</p>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if logged_in? && @user == current_user %>
    <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-default' %>
<% end %>
