<% provide(:title, "Fluxes") %>

<div class="row">
  <div class="col-md-4">
    <% if logged_in? %>
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <hr>
        <section class="micropost_form">
          <%= render 'shared/flux_form' %>
        </section>
    <% else %>
        <%= link_to "Log in", login_path, class: 'btn btn-success btn-block' %>
    <% end %>
  </div>

  <div class="col-md-8">
    <h1>Listing Fluxes</h1>

    <!--<%= link_to 'New Flux', new_flux_path, class: 'btn btn-success' %>-->

    <hr>

    <%= render @fluxes %>

    <%= will_paginate renderer: BootstrapPagination::Rails %>
  </div>
</div>