<p id="notice"><%= notice %></p>

<h1>Listing Private Messages</h1>

<table>
  <thead>
    <tr>
      <th>Touser</th>
      <th>Fromuser</th>
      <th>Content</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @private_messages.each do |private_message| %>
      <tr>
        <td><%= private_message.toUser.name %></td>
        <td><%= private_message.fromUser.name %></td>
        <td><%= private_message.content %></td>
        <td><%= private_message.picture %></td>
        <td><%= link_to 'Show', private_message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Private message', new_private_message_path %>
