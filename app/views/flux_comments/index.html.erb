<p id="notice"><%= notice %></p>

<h1>Listing Flux Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flux_comments.each do |flux_comment| %>
      <tr>
        <td><%= flux_comment.content %></td>
        <td><%= flux_comment.user %></td>
        <td><%= flux_comment.parentComment.content if flux_comment.parentComment != nil %></td>
        <td><%= link_to 'Show', flux_comment %></td>
        <td><%= link_to 'Edit', edit_flux_comment_path(flux_comment) %></td>
        <td><%= link_to 'Destroy', flux_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

